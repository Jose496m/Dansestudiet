---
import { Image } from "astro:assets";
import skema1 from "../assets/images/skema.webp";
import skema2 from "../assets/images/skema.webp";
import skema3 from "../assets/images/skema.webp";
import Overskrift from "./Overskrift.astro";
import Button from "./Button.astro";
---

<Overskrift title="Skema" />
<section>
  <div class="green_background">
    <Button link="#" title="Se alle" />
  </div>
  <div class="flex">
    <Image class="skema1" src={skema1} alt="skema1" />
    <Image class="skema2" src={skema2} alt="skema2" />
    <Image class="skema3" src={skema3} alt="skema3" />
  </div>
</section>

<style>
  @media (min-width: 800px) {
    section {
      border-block: 4px solid var(--border-stroke);
      display: flex;
      max-width: fit-content;
    }
    .flex {
      display: flex;
      justify-content: space-evenly;
      gap: 50px;
    }
    .green_background {
      clip-path: polygon(0px 0px, 113.86% 0px, 137.08% 100.35%, 0.17% 100%);
      background-color: var(--surface-secondary);
      padding: 6rem;
    }
  }

  @media (max-width: 400px) {
    .skema1 {
      border: 4px solid #196572;
      margin-bottom: 2rem;
      margin-top: 60px;
      margin-inline: 2rem;
    }
    .skema2 {
      border: 4px solid #196572;
      margin-block: 3px;
      margin-inline: 2rem;
    }
    .skema3 {
      border: 4px solid #196572;
      margin-top: 60px;
      margin-inline: 2rem;
    }

    .flex {
      display: flex;
      gap: 35px;
    }
    .green_background {
    }
  }
</style>
