---
const { title, link } = Astro.props;
---

<div class="button_container">
    <div>
      <a href={link}><span>{title}</span></a>
    </div>
  </div>

  <style>
    a {
    display: grid;
    width: 100%;
    grid-template-columns: 1fr auto 1fr;
    border: none;
    background: transparent;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }
  span {
    color: var(--button-primary-default-text);
    background-color: var(--button-primary-default-surface);
    border: 4px solid var(--button-primary-default-border);
    padding: 20px 35px;
    font-family:"Open Sans", sans-serif ;
    font-weight: 600;
    cursor: pointer;
    font-size: 30px;
  }
  span:hover {
    color: var(--button-primary-hover-text);
    background-color: var(--button-secondary-hover-surface);
    border: 4px solid var(--button-primary-hover-border);
  }
  </style>