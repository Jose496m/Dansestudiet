---
import { Image } from "astro:assets";
import workshop1 from "../assets/images/workshop1.webp";
import workshop2 from "../assets/images/workshop2.webp";
import Overskrift from "./Overskrift.astro";
---

<Overskrift title="MÃ¥nedens Workshop" />
<section class="workshop">
  <div class="workshop-image">
    <Image class="workshop1" src={workshop1} alt="workshop1" />
  </div>
  <div class="workshop-image">
    <Image class="workshop2" src={workshop2} alt="workshop2" />
  </div>
</section>

<style>
  @media (min-width: 800px) {
    .workshop {
      display: flex;
      gap: 50px;
    }

    .workshop-image {
      flex: 1;
      max-width: 100%;
    }

    .workshop1,
    .workshop2 {
      width: 100%;
      height: auto;
    }

    section {
      border-block: 4px solid var(--border-stroke);
      padding: 4rem;
    }
  }
  @media (max-width: 400px) {
    .workshop {
    }

    .workshop-image {
    }

    .workshop1,
    .workshop2 {
      height: auto;
      width: 50%;
    }

    section {
      border-block: 4px solid var(--border-stroke);
      padding: 4rem;
    }
  }
</style>
