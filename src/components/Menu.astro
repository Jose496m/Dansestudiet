---
import { Image } from "astro:assets";
import dans from "../assets/images/dansestudiet.svg";
---

<section>
  <div class="img">
    <Image class="logo" src={dans} alt="dans" />
  </div>

  <div>
    <ul>
      <li>Skema</li>
      <li>underviser</li>
      <li>Danseuddannelse</li>
      <li>Workshops</li>
      <li>kontakt</li>
    </ul>
  </div>
  <div class="line"></div>
</section>

<style>
  @media (min-width: 800px) {
    ul {
      list-style: none;
      padding: 0;
      text-align: right;
      margin-top: -80px;
    }
    li {
      display: inline-block;
      margin-right: 50px;
    }
    img {
      clip-path: polygon(
        0 0,
        calc(100% - 80px) 0,
        98% calc(100% - 40px),
        0 calc(100% - 40px)
      );
    }

    .logo {
      background-color: #196572;
      padding: 200px;
      width: 20%;
    }

    .line {
      border-bottom: #196572 solid 4px;
    }
  }
</style>
