---
import { Image } from "astro:assets";
import dans from "../assets/images/dansestudiet.svg";
const { link } = Astro.props;
---

<nav>
  <ul>
    <li><a href={link}><Image class="logo" src={dans} alt="dans" /></a></li>
    <li>Skema</li>
    <li>Underviser</li>
    <li>Danseuddannelse</li>
    <li>Workshops</li>
    <li>Kontakt</li>
  </ul>
</nav>

<style>
  @media (min-width: 800px) {
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      display: inline-block;
      margin-right: 50px;
      margin-top: 39px;
    }
    img {
      clip-path: polygon(0px 0px, 400px 0px, 97.77% 139px, 0px 140px);
    }

    .logo {
      background-color: #196572;
      padding-inline: 169px;
      padding-block: 40px;
      margin-block: -3rem;
    }

    nav {
      border-bottom: 4px solid var(--border-stroke);
    }
  }
</style>
