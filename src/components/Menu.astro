---
import { Image } from "astro:assets";
import dans from "../assets/images/dansestudiet.svg";
---

<section>
  <div>
    <ul>
      <li>Skema</li>
      <li>underviser</li>
      <li>Danseuddannelse</li>
      <li>Workshops</li>
      <li>kontakt</li>
    </ul>
  </div>

  <Image class="logo" src={dans} alt="dans" />
  <div class="line"></div>
</section>

<style>
  @media (min-width: 800px) {
    ul {
      list-style: none;
      padding: 0;
      text-align: right;
    }
    li {
      display: inline-block;
      margin-right: 50px;
      margin-top: 39px;
    }
    img {
      clip-path: polygon(
        0 0,
        calc(100% - 46px) 0,
        98% calc(100% - 40px),
        0 calc(100% - 40px)
      );
    }

    .logo {
      background-color: #196572;
      padding: 50px;
      margin-top: -90px;
    }
    .line {
      width: 100%; /* Juster bredden efter behov */
      margin: 0 auto; /* Centerer linjen */
      margin-top: -44px;
      border-bottom: 4px solid #196572;
    }
  }
</style>
