---
import { Image } from "astro:assets";
import dans from "../assets/images/dansestudiet.svg";
const { link } = Astro.props;
---

<nav id="menu">
  <ul>
    <a href={link}><Image class="logo" src={dans} alt="dans" /></a>
    <li class="menu">Skema</li>
    <li class="menu">Underviser</li>
    <li class="menu">Danseuddannelse</li>
    <li class="menu">Workshops</li>
    <li class="menu">Kontakt</li>
  </ul>
</nav>
<script src="../scripts/menu.js"></script>
<style>
  @media (min-width: 800px) {
    ul {
      list-style: none;
      padding-left: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    li {
      display: inline-block;
      margin-right: 50px;
      margin-top: 20px;
    }

    img {
      clip-path: polygon(0px 0px, 396px 0px, 98% 155px, 0px 155px);
    }

    .logo {
      background-color: #196572;
      padding-inline: 169px;
      padding-block: 40px;
      margin-block: -3rem;
      float: rigtht;
    }

    .logo_desktop {
      display: block;
    }
    #menu .logo_burger {
      display: none;
    }
    nav {
      border-bottom: 4px solid var(--border-stroke);
      height: 124px;
    }
    #menu {
      float: right;
    }
    #menu ul {
      display: flex;
      align-items: center;
      gap: 20px 40px;
      margin: 30px;
    }

    #menu a:hover {
      color: white;
    }
  }

  @media (max-width: 600px) {
  }
</style>
