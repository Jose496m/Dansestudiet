---
import { Image } from "astro:assets";
import header from "../assets/images/headerbillede3.webp";
---

<section class="container">
  <div class="img">
    <Image class="header" src={header} alt="header" />
  </div>
  <div>
    <h2>Danse Studiet</h2>
  </div>
</section>

<style>
  @media (min-width: 800px) {
    ul {
      list-style: none;
      padding: 0;
      text-align: right;
      margin-top: -80px;
    }
    li {
      display: inline-block;
      margin-right: 50px;
    }
    img {
      clip-path: polygon(0 0, calc(100% - 174px) 0, calc(100% - 94px) calc(100% - 0px), 0 calc(100% - 0px));
    }

    section {
      border-bottom: 4px solid var(--border-stroke);
      padding-bottom: 11rem;
    }
    h2 {
      text-align: center;
      margin-top: -240px;
    }
  }
</style>
